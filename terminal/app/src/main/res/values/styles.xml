<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="MyButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">15dp</item>

    </style>

    <style name="MyTextField" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"></style>

    <style name="MyTitle" parent="@android:style/TextAppearance">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
